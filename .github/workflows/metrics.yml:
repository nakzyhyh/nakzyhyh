name: Metrics & Snake Dashboard

on:
  schedule:
    - cron: "0 6 * * *"   # TÃ¤glich 06:00 UTC
  workflow_dispatch:

permissions:
  contents: write

jobs:
  metrics:
    runs-on: ubuntu-latest
    steps:
      - name: Generate Main Metrics
        uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.METRICS_TOKEN }}
          user: nakzyhyh
          template: classic
          base: header, activity, community, repositories, metadata
          config_timezone: Europe/Berlin
          plugin_isocalendar: yes
          plugin_isocalendar_duration: full-year
          plugin_languages: yes
          plugin_languages_details: bytes-size, percentage
          plugin_languages_limit: 10
          plugin_languages_sections: most-used, recently-used
          plugin_languages_threshold: 2%
          plugin_achievements: yes
          plugin_achievements_display: compact
          plugin_achievements_secrets: yes
          plugin_lines: yes
          plugin_habits: yes
          plugin_habits_days: 14
          plugin_habits_from: 200
          output_action: commit
          committer_branch: main
          filename: metrics.svg

      - name: Generate Extra Metrics
        uses: lowlighter/metrics@latest
        with:
          token: ${{ secrets.METRICS_TOKEN }}
          user: nakzyhyh
          template: classic
          base: ""
          config_timezone: Europe/Berlin
          plugin_followup: yes
          plugin_followup_sections: repositories, users
          plugin_calendar: yes
          plugin_calendar_limit: 1
          plugin_stargazers: yes
          output_action: commit
          committer_branch: main
          filename: metrics.additional.svg

  snake:
    runs-on: ubuntu-latest
    steps:
      - name: Generate Snake Animation
        uses: Platane/snk@v3
        with:
          github_user_name: nakzyhyh
          outputs: |
            dist/snake-dark.svg?palette=github-dark
            dist/snake-light.svg?palette=github-light
      - name: Push Snake
        uses: crazy-max/ghaction-github-pages@v4
        with:
          target_branch: output
          build_dir: dist
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
